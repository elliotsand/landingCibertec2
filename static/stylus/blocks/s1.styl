.b1
	display flex
	flex-flow row wrap
	position relative
	.g0-cnt-btn
		margin-top 40px
	
	// .owl-nav
	.owl-leg
		position absolute
		bottom 50%
		transform translateY(50%)
		right 0
		z-index 10
		color c-0
		display flex
		align-items flex-start
	.owl-this		
		font-size 42px
		margin 0
		font-family t-2
		line-height 100%
	.owl-total		
		position relative
		&:after
			content ""
			background-color c-0
			height 3px
			position absolute
			width 100%
			bottom -3px
			right 0

.b1-progress
	background-color c-1
	width 80%
	height 100%
.b1-wrap-pager	
	height 15vh
	position relative

				
.b1-separation, .owl-total		
	font-size 18px
	font-family t-1
	margin 0
.b1-separation
	margin 0 5px
	margin-left 10px
.b1-title
	font-size 20px
	font-family t-1
	margin-bottom 30px

.b1-cnt-slide
.b1-wrap-form
	width 50%

.b1-cnt-slide
	position relative
	z-index 2
		

.b1-wrap-form
	display flex
	align-items center
	padding-left 60px
	box-sizing border-box
	position relative

.b1-bgform
	position absolute
	top 0
	right 0
	width 60vw
	height 100%
	background-size cover
	background-position center
	z-index 1
	
.b1-itemsl	
	height calc(85vh - 80px)
	position relative

.b1-bg	
	position absolute
	top 0
	left 0
	width 100%
	height 100%
	background-size cover
	background-position center

.b1-wrap-form
	background-size cover
	background-position center	
	height calc(100vh - 80px)	

.b1-inner	
	max-width 330px
	position relative
	z-index 2

.b1-form	
	margin-bottom 30px


.b1-scroll
	width 88px
	height 192px
	background-color c-0
	position absolute
	bottom 0
	left 0
	color #fff
	z-index 10
.b1-scroll-text	
	margin 0
	position relative
	top 60px
	font-family t-2
	font-size 12px
	transform rotate(90deg)

.b1-scroll-image
	position absolute
	bottom 20px
	left 0
	width 100%
	text-align center