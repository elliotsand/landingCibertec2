.g0-cnt-btn	
	display flex
	&.center
		justify-content center
.g0-btn
	max-width 330px
	width 100%
	height 60px
	background-color c-0
	border none
	display flex
	align-items center
	justify-content center
	font-size 24px
	font-family t-1
	color #fff
	border-radius 40px
	transition all .3s
	&:hover
		background-color c-1
	&.green
		background-color c-1
		&:hover
			background-color c-0

.g0-check
	position relative
	font-size 13px
	padding-left 25px
	a
		&:hover
			text-decoration underline
	input[type="checkbox"]
		opacity 0
		visibility hidden
		position absolute
		top 0
		left 0
		&:checked + label
			.g0-check_icon:before
				opacity 1
				visibility visible
.g0-check_text
	p
		margin-bottom 0
.g0-check_icon
	display block
	width 15px
	height 15px
	border 1px solid c-0
	border-radius 100%
	position relative
	box-sizing border-box
	margin 0
	margin-right 8px
	position absolute
	top 5px
	left 0
	
	&:before
		content "âœ”"
		display flex
		flex-direction column
		justify-content center
		align-items center
		width 100%
		height 100%
		color c-0
		font-family t-0
		font-size 10px
		visibility hidden
		transition all .25s ease
		position absolute
		top 0
		left 0

.g0-required
	font-size 11px
	padding-left 25px
.g0-input	
	margin-bottom 25px
	placeholder(c-0,t-0)
	&:last-child
		margin-bottom 0
	input	
		width 100%
		height 42px
		line-height 42px
		font-size 15px
		padding 0 20px
		box-sizing border-box
		border 1px solid c-0
		border-radius 20px
		background none
		

@media screen and (max-width 768px)	
	.g0-input		
		margin-bottom 10px
		input		
			height 37px
			line-height 37px