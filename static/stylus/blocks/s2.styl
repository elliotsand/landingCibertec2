.b2
	display flex
	flex-flow row wrap

.b2-item
	width 50%
	height 80vh
	position relative
	display flex
	align-items center
	&:nth-child(2)
		.b2-text
			margin-left 70px
			margin-right 0
		.b2-item-icon		
			&:before
				left inherit
				right -50px
				top -80px
				background-image url(../img/b2-circle-2.png)
.b2-item-icon
	margin-bottom 50px
	position relative
	&:before
		content ""
		position absolute
		top 0
		left -50px
		background-image url(../img/b2-circle-1.png)
		width 130px
		height 150px
		
.b2-text
	position relative
	z-index 2
	max-width 330px
	width 100%
	margin-left auto
	margin-right 70px
	text-align center

.b2-bg	
	position absolute
	top 0
	left 0
	width 100%
	height 100%
	z-index 1
	background-position center
	background-size cover

.b2-title	
	font-size 40px
	color #fff
	margin-bottom 50px
	text-transform uppercase
	font-family t-3