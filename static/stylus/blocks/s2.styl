.b2
	display flex
	flex-flow row wrap
	@media screen and (max-width 480px)
		.g0-btn
			max-width 250px
	&.anima
		.b2-text
			opacity 1
			transform translateX(0)
		.b2-item
			&:nth-child(2)
				.b2-text
					opacity 1
					transform translateX(0)
			
	&.one-item
		.b2-item
			width 100%
		.b2-text
			margin 0 auto
		
.b2-item
	width 50%
	height 80vh
	position relative
	display flex
	align-items center
	&:nth-child(2)
		.b2-text
			margin-left 70px
			margin-right 0
			position relative
			opacity 0
			transform translateX(100px)
			transition: transform 1s cubic-bezier(0.68, -0.55, 0.27, 1.55), opacity 0.5s;
			&:after
				content ""
				position absolute
				bottom 40%
				right 0
				height 12px
				width 12px	
				border-radius 100%
				background-color #009fd9
		.b2-item-icon		
			&:before
				left inherit
				right -50px
				top -80px
				background-image url(../img/b2-circle-2.png)
	&:first-child
		&:before
			content ""
			position absolute
			top 10%
			right 5%
			border-radius 100%
			border 3px solid c-4
			box-sizing border-box
			width 42px
			height 42px	
			z-index 2
	@media screen and (max-width 768px)
		width 100%
		height 500px
		&:nth-child(2)
			.b2-text
				margin 0 auto
	@media screen and (max-width 425px)
		&:first-child
			&:before
				display none
		

.b2-item-icon
	margin-bottom 50px
	position relative
	&:before
		content ""
		position absolute
		top 0
		left -50px
		background-image url(../img/b2-circle-1.png)
		width 130px
		height 150px
		
.b2-text
	position relative
	z-index 2
	max-width 330px
	width 100%
	margin-left auto
	margin-right 70px
	text-align center
	opacity 0
	transform translateX(-100px)
	transition: transform 1s cubic-bezier(0.68, -0.55, 0.27, 1.55), opacity 0.5s;
	@media screen and (max-width 768px)
		margin 0 auto
	

.b2-bg	
	position absolute
	top 0
	left 0
	width 100%
	height 100%
	z-index 1
	background-position center
	background-size cover

.b2-title	
	font-size 40px
	color #fff
	margin-bottom 50px
	text-transform uppercase
	font-family t-3
	@media screen and (max-width 480px)
		font-size 30px