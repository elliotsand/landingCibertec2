.cnt-wrapper
	padding-top 80px
	@media screen and (max-width 1024px)
		padding-top 60px

.header
	background-color c-0
	position fixed
	top 0
	width 100%
	left 0
	z-index 1000
	.wancho
		height 80px
		display flex
		align-items center
		justify-content space-between
		@media screen and (max-width 1024px)
			height 60px
	.h-logo
		margin 0
		img
			max-width 100%
			height auto
		@media screen and (max-width 1024px)
			width 130px
	.h-menu
		width 310px
		display flex
		@media screen and (max-width 1024px)
			display none
	.h-nav-link
		text-align center
		width 33.33%
		color c-3
		font-size 12px
		font-family t-2
		padding-left 20px
		box-sizing border-box
		display block
		text-transform uppercase


// Menu responsive
.responsive-logo
	display block
	opacity 0
	padding 20px
	img
		display block
		width 100%
		height auto

.menu-overlay
	position fixed
	top 0
	left 0
	background-color black
	z-index -1
	width 100%
	height 100%
	opacity 0
	cursor pointer
	transition all 0.45s ease
	&.active
		z-index 1000
		opacity 0.8

.menu-mobile-close, .menu-mobile-open
	border-radius 7%
	color white
	cursor pointer
	font-size 28px
	height 42px
	line-height 42px
	position fixed
	right 5px
	text-align center
	top 6px
	transition all 0.45s ease
	width 42px
	transform rotate(0deg)

.menu-mobile-open
	opacity 1
	visibility hidden
	z-index 1002
	&.scrolling
		opacity 0.6
	&:hover
		opacity 1
	&.active
		visibility hidden
		opacity 0
		right 220px
		z-index 1000
		transform rotate(-90deg)

.menu-mobile-close
	visibility hidden
	opacity 0
	z-index 1000
	background c-0
	color c-first
	&.active
		visibility visible
		opacity 1
		right 205px
		z-index 1002
		transform rotate(-90deg)
.menu-sidebar
	width 200px
	height 100%
	overflow auto
	position fixed
	top 0
	right -200px
	background c-0
	z-index 1000
	transition right 0.45s ease
	&.active
		right 0
.menu-responsive
	padding-top 10px
	.h-nav-link
		padding-left 20px
		padding-right 20px
		display flex
		align-items center
		color c-3
		height 40px
		font-size 14px
		text-transform uppercase
		border-bottom 1px solid #52656f
.cnt-wrapper,.footer
	position relative
	left 0
	transition left 0.45s ease
	&.active
		left -200px
.wrapper
	overflow hidden

body
	&.active
		overflow hidden

@media screen and (max-width:1024px)
	.menu
		display none
	.menu-mobile-open
		visibility visible
